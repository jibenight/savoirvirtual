---
import BaseLayout from '../layouts/BaseLayout.astro';
const allPosts = await Astro.glob('../pages/lessons/*.md');
const pageTitle: string = 'School';
---

<BaseLayout pageTitle={pageTitle}>
  <p>Voici o√π je vais publier mes lessons</p>
  <ul>
    {
      allPosts.map(post => (
        <li>
          <a href={post.url}>{post.frontmatter.title}</a>
        </li>
      ))
    }
  </ul>
</BaseLayout>
