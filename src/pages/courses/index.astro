---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { categories } from './list-courses.astro';
import { Image } from 'astro:assets';

const pageTitle = "Cours";
---

<BaseLayout pageTitle={pageTitle}>
  <div class="courses-page">
    <div class="container">
      <header class="page-header">
        <h1>{pageTitle}</h1>
        <p class="subtitle">Développez vos compétences avec nos formations en ligne</p>
      </header>

      <section class="categories-grid">
        {categories.map((category) => (
          <article class="category-card">
            <div class="category-image">
              <Image 
                src={category.image} 
                alt={`${category.title} courses`}
                width={800}
                height={450}
                quality={80}
                format="jpg"
              />
              <div class="category-overlay">
                <h2>{category.title}</h2>
              </div>
            </div>
            <div class="category-content">
              <p class="category-description">{category.description}</p>
              <div class="courses-list">
                <h3>Cours disponibles :</h3>
                <ul>
                  {category.courses.map((course) => (
                    <li>
                      <a href={course.slug} class="course-link">
                        <div class="course-info">
                          <h4>{course.title}</h4>
                          <div class="course-meta">
                            <span class="course-level">{course.level}</span>
                            <span class="course-duration">
                              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="10"/>
                                <path d="M12 6v6l4 2"/>
                              </svg>
                              {course.duration}
                            </span>
                          </div>
                        </div>
                        <svg class="arrow-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <path d="M5 12h14M12 5l7 7-7 7"/>
                        </svg>
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </article>
        ))}
      </section>

      <section class="learning-path">
        <h2>Parcours d'Apprentissage Recommandé</h2>
        <div class="path-steps">
          <div class="path-step">
            <div class="step-number">1</div>
            <h3>HTML Foundations</h3>
            <p>Commencez par les bases de la structure web</p>
          </div>
          <div class="path-step">
            <div class="step-number">2</div>
            <h3>CSS Styling</h3>
            <p>Ajoutez du style et du design à vos pages</p>
          </div>
          <div class="path-step">
            <div class="step-number">3</div>
            <h3>JavaScript Programming</h3>
            <p>Rendez vos sites interactifs et dynamiques</p>
          </div>
        </div>
      </section>

      <section class="cta-section">
        <div class="cta-content">
          <h2>Besoin d'aide pour choisir ?</h2>
          <p>Je peux vous aider à définir le parcours qui correspond le mieux à vos objectifs.</p>
          <a href="/contact" class="button button-primary">Me contacter</a>
        </div>
      </section>
    </div>
  </div>
</BaseLayout>

<style>
  .courses-page {
    padding: var(--spacing-xxl) 0;
  }

  .page-header {
    text-align: center;
    margin-bottom: var(--spacing-xxl);
  }

  .page-header h1 {
    font-size: 3rem;
    margin-bottom: var(--spacing-sm);
  }

  .subtitle {
    font-size: 1.25rem;
    color: var(--color-neutral-foreground-secondary);
  }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-xl);
    margin-bottom: var(--spacing-xxl);
  }

  .category-card {
    background: var(--color-neutral-background);
    border-radius: 8px;
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    transition: transform var(--transition-fast);
  }

  .category-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
  }

  .category-image {
    position: relative;
    aspect-ratio: 16/9;
    overflow: hidden;
  }

  .category-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .category-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.7), transparent);
    display: flex;
    align-items: flex-end;
    padding: var(--spacing-lg);
  }

  .category-overlay h2 {
    color: white;
    margin: 0;
  }

  .category-content {
    padding: var(--spacing-lg);
  }

  .category-description {
    color: var(--color-neutral-foreground-secondary);
    margin-bottom: var(--spacing-lg);
  }

  .courses-list h3 {
    font-size: 1.25rem;
    margin-bottom: var(--spacing-md);
  }

  .courses-list ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .course-link {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--spacing-md);
    color: var(--color-neutral-foreground);
    text-decoration: none;
    background: var(--color-neutral-background-secondary);
    border-radius: 6px;
    margin-bottom: var(--spacing-sm);
    transition: all var(--transition-fast);
  }

  .course-link:hover {
    background: var(--color-brand-primary);
    color: white;
  }

  .course-info h4 {
    margin: 0;
    margin-bottom: var(--spacing-xs);
  }

  .course-meta {
    display: flex;
    gap: var(--spacing-md);
    font-size: 0.875rem;
    color: inherit;
    opacity: 0.8;
  }

  .course-duration {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
  }

  .arrow-icon {
    transition: transform var(--transition-fast);
  }

  .course-link:hover .arrow-icon {
    transform: translateX(4px);
  }

  .learning-path {
    margin-bottom: var(--spacing-xxl);
    text-align: center;
  }

  .learning-path h2 {
    margin-bottom: var(--spacing-xl);
  }

  .path-steps {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--spacing-xl);
  }

  .path-step {
    position: relative;
  }

  .step-number {
    width: 40px;
    height: 40px;
    background: var(--color-brand-primary);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto var(--spacing-md);
    font-weight: 600;
  }

  .path-step h3 {
    margin-bottom: var(--spacing-sm);
  }

  .path-step p {
    color: var(--color-neutral-foreground-secondary);
  }

  .cta-section {
    background: var(--color-neutral-background-secondary);
    padding: var(--spacing-xxl) var(--spacing-lg);
    border-radius: 8px;
    text-align: center;
  }

  .cta-content h2 {
    margin-bottom: var(--spacing-sm);
  }

  .cta-content p {
    margin-bottom: var(--spacing-lg);
  }

  @media (max-width: 768px) {
    .categories-grid {
      grid-template-columns: 1fr;
    }

    .path-steps {
      grid-template-columns: 1fr;
    }

    .course-link {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--spacing-sm);
    }

    .arrow-icon {
      display: none;
    }
  }
</style>
