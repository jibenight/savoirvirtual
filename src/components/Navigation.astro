<nav class="nav-panel">
  <div class="nav-header">
    <button class="close-button" id="close-button" aria-label="Fermer le menu">
      <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
        <path d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"/>
      </svg>
    </button>
  </div>

  <div class="nav-content">
    <div class="nav-section">
      <h2 class="nav-section-title">Menu</h2>
      <ul class="nav-list">
        <li><a href="/" class="nav-link">Accueil</a></li>
        <li><a href="/about" class="nav-link">À propos</a></li>
        <li><a href="/services" class="nav-link">Services</a></li>
      </ul>
    </div>

    <div class="nav-section">
      <h2 class="nav-section-title">Cours</h2>
      <ul class="nav-list">
        <li><a href="/courses/html" class="nav-link">HTML</a></li>
        <li><a href="/courses/css" class="nav-link">CSS</a></li>
        <li><a href="/courses/javascript" class="nav-link">JavaScript</a></li>
        <li><a href="/courses" class="nav-link">Tous les cours</a></li>
