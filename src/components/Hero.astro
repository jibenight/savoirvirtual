<section class="hero">
  <div class="container">
    <div class="hero-content">
      <span class="hero-badge fade-in">Formation Digital</span>
      <h1 class="hero-title fade-in">
        Apprenez le
        <span class="highlight">développement web</span>
        avec un expert
      </h1>
      <p class="hero-description fade-in">
        Des cours structurés, des exemples concrets et un accompagnement personnalisé
        pour maîtriser les technologies du web moderne.
      </p>
      <div class="hero-actions fade-in">
        <a href="/courses" class="button button-primary">Voir les cours</a>
        <a href="/services" class="button button-secondary">Mes services</a>
      </div>
      
      <div class="hero-stats fade-in">
        <div class="stat-item">
          <span class="stat-value">HTML5</span>
          <span class="stat-label">Front-end</span>
        </div>
        <div class="stat-item">
          <span class="stat-value">CSS3</span>
          <span class="stat-label">Design</span>
        </div>
        <div class="stat-item">
          <span class="stat-value">JS</span>
          <span class="stat-label">Interactivité</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    padding: var(--spacing-xxl) 0;
    background: linear-gradient(
      to bottom right,
      var(--color-neutral-background),
      var(--color-neutral-background-secondary)
    );
    position: relative;
    overflow: hidden;
  }

  .hero::before {
    content: "";
    position: absolute;
    top: -50%;
    right: -50%;
    width: 100%;
    height: 100%;
    background: radial-gradient(
      circle,
      var(--color-brand-primary) 0%,
      transparent 70%
    );
    opacity: 0.1;
    transform: rotate(-45deg);
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .hero-badge {
    display: inline-block;
    padding: var(--spacing-xs) var(--spacing-sm);
    background-color: var(--color-brand-primary);
    color: white;
    font-size: 14px;
    font-weight: 500;
    border-radius: 20px;
    margin-bottom: var(--spacing-md);
  }

  .hero-title {
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    line-height: 1.1;
    margin-bottom: var(--spacing-lg);
    font-weight: 700;
  }

  .highlight {
    display: inline-block;
    background: linear-gradient(
      45deg,
      var(--color-brand-primary),
      var(--color-brand-secondary)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    color: transparent;
  }

  .hero-description {
    font-size: clamp(1.125rem, 4vw, 1.25rem);
    line-height: 1.5;
    margin-bottom: var(--spacing-xl);
    color: var(--color-neutral-foreground);
    opacity: 0.8;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-actions {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    margin-bottom: var(--spacing-xl);
  }

  .hero-stats {
    display: flex;
    gap: var(--spacing-xl);
    justify-content: center;
    margin-top: var(--spacing-xl);
    padding-top: var(--spacing-xl);
    border-top: 1px solid rgba(0, 0, 0, 0.1);
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-xs);
  }

  .stat-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-brand-primary);
  }

  .stat-label {
    font-size: 0.875rem;
    color: var(--color-neutral-foreground);
    opacity: 0.8;
  }

  @media (max-width: 768px) {
    .hero {
      padding: var(--spacing-xl) 0;
    }

    .hero-actions {
      flex-direction: column;
      align-items: stretch;
    }

    .hero-stats {
      flex-wrap: wrap;
      gap: var(--spacing-lg);
    }

    .button {
      width: 100%;
    }
  }

  /* Animations */
  .fade-in {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease forwards;
  }

  .hero-badge { animation-delay: 0.1s; }
  .hero-title { animation-delay: 0.2s; }
  .hero-description { animation-delay: 0.3s; }
  .hero-actions { animation-delay: 0.4s; }
  .hero-stats { animation-delay: 0.5s; }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
