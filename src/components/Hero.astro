<section class="hero">
  <div class="hero-background">
    <div class="gradient-sphere"></div>
    <div class="gradient-sphere secondary"></div>
  </div>
  
  <div class="container">
    <div class="hero-content">
      <span class="hero-badge slide-in">Formation Digital</span>
      <h1 class="hero-title slide-in">
        Apprenez le
        <span class="highlight">développement web</span>
        avec un expert
      </h1>
      <p class="hero-description slide-in">
        Des cours structurés, des exemples concrets et un accompagnement personnalisé
        pour maîtriser les technologies du web moderne.
      </p>
      <div class="hero-actions slide-in">
        <a href="/courses" class="button button-primary">
          Voir les cours
          <span class="button-icon">→</span>
        </a>
        <a href="/services" class="button button-secondary">
          Mes services
          <span class="button-icon">→</span>
        </a>
      </div>
      
      <div class="hero-stats">
        <div class="stat-item slide-up">
          <div class="stat-icon html">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M13 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9z"></path><polyline points="13 2 13 9 20 9"></polyline></svg>
          </div>
          <span class="stat-value">HTML5</span>
          <span class="stat-label">Front-end</span>
        </div>
        <div class="stat-item slide-up">
          <div class="stat-icon css">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><path d="M12 16v-4"></path><path d="M12 8h.01"></path></svg>
          </div>
          <span class="stat-value">CSS3</span>
          <span class="stat-label">Design</span>
        </div>
        <div class="stat-item slide-up">
          <div class="stat-icon js">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon></svg>
          </div>
          <span class="stat-value">JS</span>
          <span class="stat-label">Interactivité</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: calc(100vh - 70px);
    padding: var(--spacing-xxl) 0;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    background: linear-gradient(
      to bottom right,
      var(--color-neutral-background),
      var(--color-neutral-background-secondary)
    );
  }

  .gradient-sphere {
    position: absolute;
    width: 50vw;
    height: 50vw;
    background: radial-gradient(
      circle,
      var(--color-brand-primary) 0%,
      transparent 70%
    );
    border-radius: 50%;
    opacity: 0.1;
    filter: blur(60px);
    animation: float 20s ease-in-out infinite;
  }

  .gradient-sphere.secondary {
    right: -20%;
    top: -20%;
    background: radial-gradient(
      circle,
      var(--color-brand-secondary) 0%,
      transparent 70%
    );
    animation-delay: -10s;
  }

  @keyframes float {
    0%, 100% {
      transform: translate(0, 0);
    }
    25% {
      transform: translate(5%, 5%);
    }
    50% {
      transform: translate(-5%, 10%);
    }
    75% {
      transform: translate(-10%, -5%);
    }
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .hero-badge {
    display: inline-block;
    padding: var(--spacing-xs) var(--spacing-md);
    background-color: var(--color-brand-primary);
    color: white;
    font-size: 14px;
    font-weight: 600;
    border-radius: 30px;
    margin-bottom: var(--spacing-md);
    box-shadow: 0 4px 20px rgba(0, 120, 212, 0.15);
    opacity: 0;
    animation: slideIn 0.6s ease forwards;
  }

  .hero-title {
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    line-height: 1.1;
    margin-bottom: var(--spacing-lg);
    font-weight: 800;
    opacity: 0;
    animation: slideIn 0.6s ease forwards 0.2s;
  }

  .highlight {
    display: inline-block;
    background: linear-gradient(
      45deg,
      var(--color-brand-primary),
      var(--color-brand-secondary)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    position: relative;
  }

  .hero-description {
    font-size: clamp(1.1rem, 3vw, 1.3rem);
    line-height: 1.6;
    color: var(--color-neutral-foreground);
    margin-bottom: var(--spacing-xl);
    opacity: 0.9;
    opacity: 0;
    animation: slideIn 0.6s ease forwards 0.4s;
  }

  .hero-actions {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    margin-bottom: var(--spacing-xl);
    opacity: 0;
    animation: slideIn 0.6s ease forwards 0.6s;
  }

  .button {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
    padding: var(--spacing-sm) var(--spacing-lg);
    border-radius: 30px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .button-icon {
    transition: transform 0.3s ease;
  }

  .button:hover .button-icon {
    transform: translateX(4px);
  }

  .button-primary {
    background: var(--color-brand-primary);
    color: white;
    box-shadow: 0 4px 20px rgba(0, 120, 212, 0.15);
  }

  .button-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 25px rgba(0, 120, 212, 0.2);
  }

  .button-secondary {
    background: transparent;
    color: var(--color-neutral-foreground);
    border: 2px solid var(--color-neutral-foreground);
  }

  .button-secondary:hover {
    background: var(--color-neutral-foreground);
    color: var(--color-neutral-background);
  }

  .hero-stats {
    display: flex;
    gap: var(--spacing-xl);
    justify-content: center;
    margin-top: var(--spacing-xxl);
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-xs);
    opacity: 0;
    transform: translateY(20px);
  }

  .stat-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    margin-bottom: var(--spacing-xs);
    transition: transform 0.3s ease;
  }

  .stat-item:hover .stat-icon {
    transform: translateY(-5px);
  }

  .html .stat-icon {
    color: #E44D26;
  }

  .css .stat-icon {
    color: #264DE4;
  }

  .js .stat-icon {
    color: #F7DF1E;
  }

  .stat-value {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--color-neutral-foreground);
  }

  .stat-label {
    font-size: 0.9rem;
    color: var(--color-neutral-foreground);
    opacity: 0.7;
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .hero {
      padding: var(--spacing-xl) var(--spacing-md);
    }

    .hero-actions {
      flex-direction: column;
    }

    .hero-stats {
      flex-direction: column;
      gap: var(--spacing-lg);
    }

    .stat-item {
      flex-direction: row;
      gap: var(--spacing-md);
    }
  }
</style>

<script>
  // Animation des statistiques
  const statItems = document.querySelectorAll('.stat-item');
  
  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry, index) => {
      if (entry.isIntersecting) {
        entry.target.style.animation = `slideUp 0.6s ease forwards ${index * 0.2}s`;
      }
    });
  }, {
    threshold: 0.5
  });

  statItems.forEach(item => observer.observe(item));
</script>
