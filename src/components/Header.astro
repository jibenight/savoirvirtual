---
import { Image } from 'astro:assets';
import logo from '../images/logo.svg';
---

<header>
  <div class="header-content">
    <a href="/" class="logo-link">
      <Image src={logo} alt="Savoir Virtual Logo" width={120} height={40} />
    </a>
  </div>
  <div class="plus-btn-pos">
    <div id="plus-btn">
      <div class="r1"></div>
      <div class="r2"></div>
    </div>
  </div>
  <nav class="menu">
    <ul>
      <li><a href="/">Accueil</a></li>
      <li><a href="/about">Ã€ propos</a></li>
      <li><a href="/services">Services</a></li>
      <li><a href="/courses">Cours</a></li>
    </ul>
  </nav>
</header>

<style>
  .header-content {
    display: flex;
    align-items: center;
    height: 100%;
    padding: 0 20px;
  }

  .logo-link {
    display: flex;
    align-items: center;
  }

  .logo-link img {
    height: 40px;
    width: auto;
  }

  .plus-btn-pos {
    position: fixed;
    top: 20px;
    right: 20px;
    z-index: 1001;
  }

  #plus-btn {
    width: 40px;
    height: 40px;
    border-radius: 40px;
    background: white;
    position: relative;
    box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12);
    cursor: pointer;
    transition: all 0.3s ease;
  }

  #plus-btn div {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 16px;
    height: 3px;
    background: var(--color-brand-primary);
    transition: all 0.5s cubic-bezier(0.7, 0, 0.3, 1);
  }

  #plus-btn .r1 {
    transform: translateX(-50%) translateY(-50%) rotate(-90deg);
  }

  #plus-btn .r2 {
    transform: translateX(-50%) translateY(-50%) rotate(-180deg);
  }

  #plus-btn:hover {
    background: var(--color-brand-primary);
    transform: scale(1.1);
  }

  #plus-btn:hover div {
    background: white;
  }

  #plus-btn:active {
    transform: scale(0.95);
    box-shadow: none;
  }

  .menu {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: var(--color-brand-primary);
    display: flex;
    justify-content: center;
    align-items: center;
    transform: translateY(-100%);
    transition: all 0.5s cubic-bezier(0.7, 0, 0.3, 1);
    pointer-events: none;
    opacity: 0;
    visibility: hidden;
  }

  .menu ul {
    list-style: none;
    padding: 0;
    margin: 0;
    text-align: center;
    width: 100%;
  }

  .menu ul li {
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.5s cubic-bezier(0.7, 0, 0.3, 1);
  }

  .menu ul li a {
    display: inline-block;
    font-size: 2.5rem;
    color: white;
    text-decoration: none;
    padding: 15px;
    transition: all 0.3s ease;
    position: relative;
  }

  .menu ul li a::after {
    content: '';
    position: absolute;
    bottom: 10px;
    left: 15px;
    width: 0;
    height: 2px;
    background: white;
    transition: width 0.3s ease;
  }

  .menu ul li a:hover {
    transform: translateX(10px);
  }

  .menu ul li a:hover::after {
    width: calc(100% - 30px);
  }

  :global(body.menu-open) {
    overflow: hidden;
  }

  :global(body.menu-open) .menu {
    transform: translateY(0);
    pointer-events: all;
    opacity: 1;
    visibility: visible;
  }

  :global(body.menu-open) .menu ul li {
    opacity: 1;
    transform: translateY(0);
  }

  :global(body.menu-open) #plus-btn {
    background: var(--color-brand-primary);
  }

  :global(body.menu-open) #plus-btn div {
    background: white;
  }

  :global(body.menu-open) #plus-btn .r1 {
    transform: translateX(-50%) translateY(-50%) rotate(-45deg);
  }

  :global(body.menu-open) #plus-btn .r2 {
    transform: translateX(-50%) translateY(-50%) rotate(-135deg);
  }

  :global(body:not(.menu-open)) .menu ul li {
    transition-delay: 0s !important;
    opacity: 0;
    transform: translateY(-20px);
  }

  @media (max-width: 768px) {
    .menu ul li a {
      font-size: 2rem;
      padding: 12px;
    }
  }
</style>

<script>
  const menuButton = document.getElementById('plus-btn');
  const menuItems = document.querySelectorAll('.menu ul li');
  let isOpen = false;

  menuButton?.addEventListener('click', () => {
    isOpen = !isOpen;
    document.body.classList.toggle('menu-open');

    if (isOpen) {
      // Animation d'ouverture
      menuItems.forEach((item, index) => {
        item.style.transitionDelay = `${0.4 + index * 0.1}s`;
      });
    } else {
      // Animation de fermeture
      menuItems.forEach((item, index) => {
        const reverseIndex = menuItems.length - 1 - index;
        item.style.transitionDelay = `${0.1 + reverseIndex * 0.1}s`;
      });
    }
  });
</script>